<div class="flex items-center justify-center min-h-screen bg-gray-900">
  <div class="bg-black p-8 rounded-lg shadow-lg w-full max-w-sm">
    <h2 class="text-3xl font-bold text-center mb-4 text-white">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: "mb-4" %>
        <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, class: "mb-4" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary w-full mb-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
