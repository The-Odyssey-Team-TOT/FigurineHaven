<div class="container mx-auto my-5">
  <h1 class="text-3xl font-bold mb-5 text-center text-black">Our Products</h1>

  <%= form_with url: products_path, method: :get, local: true, class: "mb-5" do |form| %>
    <div class="flex justify-center">
      <%= form.text_field :query, placeholder: "  Search", class: "form-input rounded mr-2 w-full md:w-1/2" %>
      <%= form.submit "Search", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @products.each do |product| %>
      <div class="product-card bg-gray-800 text-white rounded-lg shadow-lg p-5">
        <%= image_tag product.image_url, class: "w-full h-48 object-cover rounded-t-lg mb-4" %>
        <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
        <p class="mb-4"><%= truncate(product.description, length: 100) %></p>
        <p class="text-lg font-bold mb-2"><%= number_to_currency(product.price) %></p>
        <p class="text-sm mb-4">Stock: <%= product.stock %></p>
        <%= link_to 'View Product', product_path(product), class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .product-card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-card img {
    max-height: 200px;
    object-fit: cover;
  }

  .product-card h2, .product-card p, .product-card a {
    margin-bottom: 0.5rem;
  }

  .product-card .btn {
    margin-top: auto; /* Place the button at the bottom */
  }
</style>
